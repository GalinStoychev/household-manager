@model HouseholdManager.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<h1 class="text-center hp-header">Welcome to Household Manager</h1>
<h4 class="text-center color-grey">your personal manager for everything you spend</h4>
<br />
<div class="row">
    <div class="col-md-12">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/Images/1.png" alt="Expenses">
                    <div class="carousel-caption">
                        <h1>All your expenses in one place</h1>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/2.png" alt="Chania" height="300">
                    <div class="carousel-caption">
                        <h1>Preview, edit or delete any expense you wish</h1>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/Images/3.jpg" alt="Flower" height="300">
                    <div class="carousel-caption">
                        <h1>Check the monthly overview</h1>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="row text-center totals">
    <div class="circle">
        <h3>Users</h3>
        <span class="count">@Model.TotalUsers</span>
    </div>
    <div class="circle">
        <h3>Households</h3>
        <span class="count">@Model.TotalHouseholds</span>
    </div>
    <div class="circle">
        <h3>Expenses</h3>
        <span class="count">@Model.TotalExpenses</span>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/home-page")
}