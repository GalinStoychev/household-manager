@model HouseholdManager.Web.Areas.Household.Models.SearchViewModel
@{
    Layout = null;
}

@using (Ajax.BeginForm(Model.ActionName, Model.ControllerName, new { }, new AjaxOptions
{
    HttpMethod = "GET",
    UpdateTargetId = "search-result",
    InsertionMode = InsertionMode.Replace

}, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.TextBox("value", null, new { @class = "form-control input-search" })
        <input type="submit" value="SEARCH" class="btn btn-search btn-default" />
    </div>
}

<div id="search-result"></div>